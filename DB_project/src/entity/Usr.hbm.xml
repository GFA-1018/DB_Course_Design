<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Usr" table="usr" schema="dbo" catalog="douban_db">
        <id name="usrId" column="usr_id"/>
        <property name="usrAccount" column="usr_account"/>
        <property name="usrNickname" column="usr_nickname"/>
        <property name="usrPasswd" column="usr_passwd"/>
        <property name="usrAccntType" column="usr_accnt_type"/>
    </class>
</hibernate-mapping>