<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Location" table="location" schema="dbo" catalog="douban_db">
        <id name="relationId">
            <column name="relation_id" sql-type="int"/>
        </id>
        <property name="regionId">
            <column name="region_id" sql-type="int"/>
        </property>
        <property name="movieId">
            <column name="movie_id" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>