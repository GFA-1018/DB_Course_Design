<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Scriptwriter" table="scriptwriter" schema="dbo" catalog="douban_db">
        <id name="scriptwriterId">
            <column name="scriptwriter_id" sql-type="int"/>
        </id>
        <property name="scriptwriterName">
            <column name="scriptwriter_name" sql-type="varchar(32)" length="32"/>
        </property>
    </class>
</hibernate-mapping>