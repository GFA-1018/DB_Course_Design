<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Responding" table="responding" schema="dbo" catalog="douban_db">
        <id name="respondId" column="respond_id"/>
        <property name="promulgator" column="promulgator"/>
        <property name="releaseTime" column="release_time"/>
        <property name="respondContent" column="respond_content"/>
        <property name="discussId" column="discuss_id"/>
    </class>
</hibernate-mapping>