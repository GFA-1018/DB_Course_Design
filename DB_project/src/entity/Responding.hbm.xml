<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Responding" table="responding" schema="dbo" catalog="douban_db">
        <id name="respondId">
            <column name="respond_id" sql-type="int"/>
        </id>
        <property name="promulgator">
            <column name="promulgator" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="releaseTime">
            <column name="release_time" sql-type="timestamp"/>
        </property>
        <property name="respondContent">
            <column name="respond_content" sql-type="varchar(400)" length="400" not-null="true"/>
        </property>
        <property name="discussId">
            <column name="discuss_id" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>