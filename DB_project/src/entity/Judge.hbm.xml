<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Judge" table="judge" schema="dbo" catalog="douban_db">
        <property name="judgeId" column="judge_id"/>
        <property name="usrId" column="usr_id"/>
        <property name="comId" column="com_id"/>
        <property name="judgeContent" column="judge_content"/>
    </class>
</hibernate-mapping>