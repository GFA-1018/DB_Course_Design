<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Actor" table="actor" schema="dbo" catalog="douban_db">
        <id name="actorId">
            <column name="actor_id" sql-type="int"/>
        </id>
        <property name="actorName">
            <column name="actor_name" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="isStar">
            <column name="is_star" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>