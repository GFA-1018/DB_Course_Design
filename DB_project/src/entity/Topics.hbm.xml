<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Topics" table="topics" schema="dbo" catalog="douban_db">
        <id name="topicsId">
            <column name="topics_id" sql-type="int"/>
        </id>
        <property name="topicsContent">
            <column name="topics_content" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>